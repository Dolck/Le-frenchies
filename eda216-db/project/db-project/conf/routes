# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /pallets                    controllers.Application.listPallets(fromDate: String ?= "", toDate: String ?= "", status: String ?= "any", cookie: String ?= "")
GET     /pallet                     controllers.Application.pallet(id: Int)
POST    /pallet                     controllers.Application.updatePallet
POST    /createPallet               controllers.Application.createPallet(cookieName: String ?= "", orderId: Int ?=0)
GET     /listOrders                 controllers.Application.listOrders
GET     /chooseCookie                controllers.Application.chooseCookie(oId: Int, statusmsg: String ?= "")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
